{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentconnect.dev/schemas/acp-envelope.json",
  "$defs": {
    "RpcId": {
      "anyOf": [
        { "type": "string", "minLength": 1 },
        { "type": "integer" }
      ]
    },
    "RpcRequest": {
      "type": "object",
      "required": ["jsonrpc", "id", "method"],
      "properties": {
        "jsonrpc": { "const": "2.0" },
        "id": { "$ref": "#/$defs/RpcId" },
        "method": { "type": "string", "minLength": 1 },
        "params": { "type": "object" }
      },
      "additionalProperties": false
    },
    "RpcSuccess": {
      "type": "object",
      "required": ["jsonrpc", "id", "result"],
      "properties": {
        "jsonrpc": { "const": "2.0" },
        "id": { "$ref": "#/$defs/RpcId" },
        "result": { "type": "object" }
      },
      "additionalProperties": false
    },
    "RpcError": {
      "type": "object",
      "required": ["jsonrpc", "id", "error"],
      "properties": {
        "jsonrpc": { "const": "2.0" },
        "id": { "$ref": "#/$defs/RpcId" },
        "error": {
          "type": "object",
          "required": ["code", "message"],
          "properties": {
            "code": {
              "type": "string",
              "enum": [
                "AC_ERR_UNAUTHORIZED",
                "AC_ERR_NOT_INSTALLED",
                "AC_ERR_INVALID_ARGS",
                "AC_ERR_UNSUPPORTED",
                "AC_ERR_INTERNAL"
              ]
            },
            "message": { "type": "string" },
            "data": { "type": "object" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
